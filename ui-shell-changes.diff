+
+export interface NavItem {
+  title: string
+  href: string
+  icon: React.ComponentType<{ className?: string }>
+  tooltip?: string
+  adminOnly?: boolean
+}
+
+// Static navigation configuration
+const NAV_ITEMS: NavItem[] = [
+  {
+    title: "Dashboard",
+    href: "/dashboard",
+    icon: Home,
+    tooltip: "Dashboard",
+  },
+  {
+    title: "Courses",
